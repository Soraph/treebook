<div class="page-header">
 <h1>Friends</h1>
</div>

<% @user_friendships.each do |friendship| %>
 <% friend = friendship.friend %>
 <div id="<%= dom_id(friendship) %>" class="friend well row">
    <div class="col-md-1">
     <%= link_to image_tag(friend.gravatar_url), profile_page_path(friend) %>
    </div>
    <div class="col-md-11">
      <strong><%= friend.full_name %></strong><br />
      <% if friendship.pending? %>
        <em>Friendship is pending.</em> <%= link_to "Delete request", edit_user_friendship_path(friendship), class: 'btn btn-danger' %>
      <% end %>
      <% if friendship.requested? %>
        <em>Friendship requested.</em> <%= link_to "Accept request", edit_user_friendship_path(friendship), class: 'btn btn-success' %>
      <% end %>
      <% if friendship.accepted? %>
        <em>Friendship started <%= friendship.updated_at %>.</em> <%= link_to "Update friendship", edit_user_friendship_path(friendship), class: 'btn btn-info' %>
      <% end %>
    </div>
 </div>
<% end %>