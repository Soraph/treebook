<div class="page-header">
    <h1><%= @user.full_name %></h1>
    
    <% if signed_in? %>
    <div id="friend-status">
      <% if current_user.friends.include?(@user) || current_user.pending_friends.include?(@user) %>
        <%= link_to "Edit friendship", edit_user_friendship_path(friend_id: @user) %>
      <% else %>
        <%= button_tag "Create friendship!", class: 'btn btn-primary', id: 'add-friendship', data: { friend_id: @user.to_param } %>
      <% end %>
    </div>
    <% end %>
</div>


<% if @statuses %>
 <% @statuses.each do |status| %>
<div class="status well">
 <p><%= status.content %></p>
 <em><%= link_to time_ago_in_words(status.created_at), status_path(status) %> ago</em>
</div>
 <% end %>
<% end %>