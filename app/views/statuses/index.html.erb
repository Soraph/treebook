<div class="page-header">
 <h1>All of the Statuses</h1>
</div>

<%= link_to 'Post a new Status', new_status_path, class: "someclass" %>

<% @statuses.each do |status| %>
<div class="status well">
 <div class="row">
  <div class="col-md-1">
     <%= image_tag status.user.gravatar_url %>
  </div>
  <div class="col-md-11">
   <div class="btn-group pull-right">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
     <span class="glyphicon glyphicon-cog"></span> <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
     <li><%= link_to 'Edit', edit_status_path(status) %></li>
     <li class="divider"></li>
     <li><%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    </ul>
   </div>
   <strong><%= link_to status.user.full_name, profile_page_path(status.user.profile_name) %></strong>
   <p><%= status.content %></p>
   <em><%= link_to time_ago_in_words(status.created_at) + " ago", status %></em>
  </div>
 </div>
</div>
<% end %>